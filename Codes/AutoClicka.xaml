<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roblox AutoClicker" Height="220" Width="220"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="MyTextBlock"
                   FontSize="16"
                   Foreground="White"
                   Text="Initializing"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,10"
                   Grid.Row="0"/>

        <TextBlock Name="TopPlaytimeTextBlock"
                   FontSize="14"
                   Foreground="White"
                   Text="Auto Click Speed: 100 ms"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Grid.Row="1"/>


        <Slider Name="ClickSpeedSlider"
                Minimum="1"
                Maximum="1000"
                Value="100"
                Width="180"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                Margin="0,0,0,10"
                Grid.Row="2"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Hotkey:"
                       Foreground="White"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <TextBox Name="HotkeyTextBox"
                     Width="80"
                     Height="35"
                     IsReadOnly="True"
                     HorizontalContentAlignment="Center"
                     ToolTip="Click here and press new hotkey"/>
        </StackPanel>

        <Button Name="ToggleClickerButton"
                Content="Start Clicker"
                Width="160"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Grid.Row="4"
                Margin="0,10,0,0"/>
    </Grid>
</Window>
