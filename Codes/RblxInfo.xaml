<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Info" Height="100" Width="550"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

  <Grid>
    <Border Padding="20" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center">
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >

        <TextBlock  Text="THIS INFO MIGHT NOT BE ACCURATE!"
                   FontWeight="SemiBold" FontSize="14" Foreground="#844"
                   TextAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Name="StatusLabel" Text="Roblox status unknown"
                   FontWeight="SemiBold" FontSize="14" Foreground="#444"
                   TextAlignment="Center" Margin="0,0,0,8"/>

        <TextBlock Name="ServerIpLabel" Text="Server IP: unknown"
                   FontWeight="SemiBold" FontSize="14" Foreground="#666"
                   TextAlignment="Center" Margin="0,0,0,4"/>

        <TextBlock Name="ServerLocationLabel" Text="Server location: unknown"
                   FontWeight="SemiBold" FontSize="14" Foreground="#666"
                   TextAlignment="Center" Margin="0,0,0,4"/>

        <TextBlock Name="PingLabel" Text="Ping: unknown"
                   FontWeight="SemiBold" FontSize="14" Foreground="#666"
                   TextAlignment="Center" Margin="0,0,0,12"/>

        <TextBlock  Text="Make sure that in Plexity Settings - Dont Close Plexity is Enabled"
                   FontWeight="SemiBold" FontSize="14" Foreground="#888"
                   TextAlignment="Center" Margin="0,0,0,5"/>

        <CheckBox Name="StayOnTopCheckbox" Content="Always OnTop"
                  FontWeight="SemiBold" Margin="135,0,0,0"/>

      </StackPanel>
    </Border>
  </Grid>
</Window>
